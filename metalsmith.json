{
  "source": "src",
  "destination": "build",
  "clean": false,
  "plugins": {
    "metalsmith-env": {},
    "metalsmith-metadata": {
      "practices": "data/practices.csv",
      "projects": "data/projects.csv",
      "tools": "data/tools.csv"
    },
    "metalsmith-sass": {
    },
    "metalsmith-ignore": [
      ".git/**",
      ".gitignore",
      ".travis.yml",
      "_config.yml",
      "INTENTIONS.md",
      "LICENSE",
      "Makefile",
      "README.md",
      "data/*"
    ],
    "metalsmith-paths": {
      "property": "paths"
    },
    "metalsmith-generate": [
      {
        "type": "metadata",
        "src": "tools",
        "contents": "tags",
        "name": "name",
        "ext": ".md",
        "path": "tools/",
        "metadata": { "layout": "md/tool.md" },
        "slugify": true
      },
      {
        "type": "metadata",
        "src": "practices",
        "contents": "description",
        "name": "name",
        "ext": ".md",
        "path": "practices/",
        "metadata": { "layout": "md/subpractice.md" },
        "slugify": true
      },
      {
        "type": "metadata",
        "src": "practices",
        "contents": "description",
        "name": "friendly_term",
        "ext": ".md",
        "path": "practices/",
        "metadata": { "layout": "md/practice.md" },
        "slugify": true
      },
      {
        "type": "metadata",
        "src": "projects",
        "contents": "teaser",
        "name": "name",
        "ext": ".md",
        "path": "projects/",
        "metadata": { "layout": "md/project.md" },
        "slugify": true
      }
    ],
    "metalsmith-collections": {
      "cards": {
        "pattern": "*/topics/:topic/:unit/*.md"
      },
      "units": {
        "pattern": "*/topics/:topic/:unit/index.md"
      },
      "topics": {
        "pattern": "*/topics/:topic/index.md"
      }
    },
    "metalsmith-layouts": {
      "engine": "nunjucks",
      "directory": "layouts/md",
      "pattern": "projects/*.md"  
    },
    "metalsmith-filemetadata": [
      {"pattern": "index.md", "metadata": {"layout": "default.html"}}
    ],
    "metalsmith-debug": true,
    "metalsmith-in-place": {
      "engine": "nunjucks"
    },
    "metalsmith-markdown": {
      "pattern": "**/*.md"
    },
    "metalsmith-layouts": {
      "engine": "nunjucks",
      "directory": "layouts", 
      "default": "default.html",
      "pattern": "index.md"
    },
    "metalsmith-assets": {
      "source": "src/assets",
      "destination": "assets"
    },
    "metalsmith-watch": {
      "paths": {
        "src/**/*": true, 
        "layouts/**/*": "**/*"
      },
      "livereload": true
    }
  }
}