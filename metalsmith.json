{
  "source": "src",
  "destination": "build",
  "clean": false,
  "plugins": {
    "metalsmith-env": {},
    "metalsmith-metadata": {
      "practices": "data/practices.csv",
      "projects": "data/projects.csv",
      "tools": "data/tools.csv"
    },
    "metalsmith-sass": {
    },
    "metalsmith-ignore": [
      ".git/**",
      ".gitignore",
      ".travis.yml",
      "_config.yml",
      "INTENTIONS.md",
      "LICENSE",
      "Makefile",
      "README.md",
      "data/*"
    ],
    "metalsmith-paths": {
      "property": "paths"
    },
    "metalsmith-generate": [
      {
        "type": "metadata",
        "src": "tools",
        "contents": "layouts/md/tool.md",
        "name": "name",
        "ext": ".md",
        "path": "tools/",
        "slugify": true
      },
      {
        "type": "metadata",
        "src": "practices",
        "contents": "layouts/md/practice.md",
        "name": "practice",
        "ext": ".md",
        "path": "practices/",
        "slugify": true
      },
      {
        "type": "metadata",
        "src": "practices",
        "contents": "layouts/md/subpractice.md",
        "name": "name",
        "ext": ".md",
        "path": "practices/subpractices/",
        "slugify": true
      },
      {
        "type": "metadata",
        "src": "projects",
        "contents": "layouts/md/project.md",
        "name": "name",
        "ext": ".md",
        "path": "projects/",
        "slugify": true
      }
    ],
    "metalsmith-debug": true,
    "metalsmith-in-place": {
      "engine": "nunjucks"
    },
    "metalsmith-markdown": {
      "pattern": "**/*.md"
    },
    "metalsmith-layouts": {
      "engine": "nunjucks",
      "directory": "layouts", 
      "default": "default.html"
    },
    "metalsmith-assets": {
      "source": "src/assets",
      "destination": "assets"
    },
    "metalsmith-watch": {
      "paths": {
        "src/**/*": true, 
        "layouts/**/*": "**/*"
      },
      "livereload": true
    }
  }
}